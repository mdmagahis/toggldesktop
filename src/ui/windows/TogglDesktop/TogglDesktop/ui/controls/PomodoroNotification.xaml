<togglDesktop:TogglNotification x:Class="TogglDesktop.PomodoroNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:togglDesktop="clr-namespace:TogglDesktop"
             mc:Ignorable="d"
             MouseDown="onNotificationMouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="8"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Style="{DynamicResource Toggl.PrimaryButton}"
                Content="Continue"
                Click="onContinueButtonClick"/>
        <Button Grid.Column="2"
                Style="{DynamicResource Toggl.PrimaryButton}"
                Content="Start new"
                Click="onStartNewButtonClick"/>
    </Grid>
</togglDesktop:TogglNotification>